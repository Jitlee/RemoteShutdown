<Window x:Class="RemoteShutdown.Server.Views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置"
        Width="300"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Header="常规" Margin="8"
                  Padding="5">
            <CheckBox Content="开启启动" IsChecked="{Binding Boot}"/>
        </GroupBox>
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Margin="0,0,8,5">
            <Button IsDefault="True" Content="确定" Height="23" Width="75" Margin="5" Click="OKButton_Click" />
            <Button IsCancel="True" Content="取消" Height="23" Width="75" Margin="5" Click="OKButton_Click" />
        </StackPanel>
    </Grid>
</Window>
